# ============================================
# Environment Variables Template
# ============================================
# 
# Copy this file to .env and fill in your values
# 
# For Vercel Deployment:
# Add these same variables in Vercel Dashboard:
# Settings > Environment Variables
# 
# IMPORTANT: Keep the VITE_ prefix for all variables
# ============================================

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google OAuth Configuration
VITE_GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com

# Google Analytics
VITE_GA_TRACKING_ID=your_ga_tracking_id

# Database Provider
# Options: "firebase" or "supabase"
# Default: "firebase"
VITE_DATABASE_PROVIDER=firebase

# Supabase Configuration (required if using Supabase)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
